{
  "compilerOptions": {
    "types": ["node", "@wdio/globals/types", "@wdio/mocha-framework"],
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["./src/**/*"]
}
